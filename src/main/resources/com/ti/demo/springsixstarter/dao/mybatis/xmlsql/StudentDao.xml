<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ti.demo.springsixstarter.dao.mybatis.xmlsql.StudentDao">

    <resultMap id="studentMap" type="com.ti.demo.domain.mybatis.xmlsql.Student">
        <id property="id" column="id" />
        <result property="firstName" column="first_name" />
        <result property="lastName" column="last_name" />
        <result property="email" column="email" />
    </resultMap>

    <select id="getAll" resultMap="studentMap">
        select* 
        from student
        <where>
            <if test="fname != null and fname != ''">
                first_name = #{fname}
            </if>
            <if test="lname != null and lname != ''">
                AND last_name = #{lname}
            </if>
        </where>
    </select>

    <select id="find" resultMap="studentMap">
        select*
        from student
        where id = #{id}
    </select>

    <insert id="save">
        insert into student (first_name, last_name, email)
        values (#{student.firstName}, #{student.lastName}, #{student.email})
    </insert>

    <update id="update">
        update student 
            <set>
                first_name = #{updatedStudent.firstName},
                last_name = #{updatedStudent.lastName},
                email = #{updatedStudent.email}
            </set>
        where id = #{id}
    </update>

    <update id="updateLastNameInBulk">
        update student
            <set>
                last_name = #{lname}
            </set>
        where id in 
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </update>

    <delete id="deleteStudentById">
        delete from student where id = #{id}
    </delete>

    <delete id="deleteStudents">
        delete from student where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
